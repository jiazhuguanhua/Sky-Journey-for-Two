# 服务器配置
PORT=3001

# MongoDB 数据库连接
# 本地开发使用
MONGODB_URI=mongodb://localhost:27017/sky-journey

# 生产环境使用 MongoDB Atlas (替换为实际连接字符串)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sky-journey?retryWrites=true&w=majority

# 环境设置
NODE_ENV=development

# CORS 允许的域名 (生产环境设置)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,https://yourusername.github.io

# 其他配置
MAX_TASKS_PER_LIBRARY=100
MAX_TASK_LENGTH=500
